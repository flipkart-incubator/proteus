{
  "type": "LinearLayout",
  "android": "http://schemas.android.com/apk/res/android",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "dataContext": {
    "seller": "sellers[$index]"
  },
  "orientation": "vertical",
  "padding": "16dp",
  "children": [
    {
      "type": "TextView",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "marginBottom": "5dp",
      "text": "~{{seller.name}} <font color=#6688ee>[{{seller.rating}}/5]</font>"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "~<b>Rs. {{seller.price}}$(number)</b>"
    }
  ]
}