{
  "type": "LinearLayout",
  "android": "http://schemas.android.com/apk/res/android",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "dataContext": {
    "seller": "sellers[$index]",
    "product": "product"
  },
  "orientation": "vertical",
  "children": [
    {
      "type": "TextView",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "~{{seller.name}} [{{seller.rating}}/5]"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "~Rs. {{seller.price}}$(number)"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "$product.title"
    }
  ]
}