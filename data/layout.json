{
  "type": "LinearLayout",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "padding": "16dp",
  "orientation": "vertical",
  "children": [{
    "type": "CircleView",
    "layout_width": "180dp",
    "layout_height": "180dp",
    "layout_gravity": "center",
    "color": "#ad6744"
  }, {
    "type": "TextView",
    "layout_width": "wrap_content",
    "layout_height": "wrap_content",
    "textSize": "24sp",
    "text": "~Hello {{name}}"
  }, {
    "type": "TextView",
    "layout_width": "wrap_content",
    "layout_height": "wrap_content",
    "textSize": "24sp",
    "text": "~{{location.city}}, {{location.country}}"
  }, {
    "type": "HorizontalProgressBar",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "max": "$experience.max",
    "progress": "$experience.current"
  }, {
    "type": "TextView",
    "layout_width": "wrap_content",
    "layout_height": "wrap_content",
    "style": "money.center",
    "padding": "8dp",
    "text": "~{{credits}}$(number) units",
    "background": {
      "type": "shape",
      "shape":"oval",
      "children": [
        {
          "type": "gradient",
          "startColor": "#aaaa3411",
          "endColor": "#DDefefef",
          "angle": "90"
        }
      ]
    },
    "animation": {
      "interpolator": {
        "type":"anticipateOvershootInterpolator"
      },
      "type": "rotate",
      "fromDegrees": "-720",
      "toDegrees": "0",
      "pivotX": "50%",
      "pivotY": "50%",
      "duration": "1500"
    }
  }]
}